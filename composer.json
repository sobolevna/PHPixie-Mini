{
	"name": "phpixie/micro-framework",
	"type": "library",
	"description" : "Bundle for micromizing PHPixie",
    "keywords": ["framework"],
	"license" : "BSD",
    "authors": [
        {
            "name": "Roman Tsiupa",
            "email": "draconyster@gmail.com",
            "homepage": "http://dracony.org"
        },
        {
            "name": "sobolevna",
            "email": "sobolevna@gmail.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "PHPixie\\": "src/PHPixie",
            "PHPixie\\Tests\\": "tests/PHPixie/Tests"
        }
    },
    "require": {
        "phpixie/framework": "3.*@dev",
        "phpixie/debug": "3.*@dev",
        "phpixie/route": "3.*@dev",
        "phpixie/template": "3.*@dev",
        "phpixie/filesystem": "3.*@dev",
        "phpixie/database": "3.*@dev",
        "phpixie/config": "3.*@dev",
        "phpixie/orm": "3.*@dev",
        "phpixie/slice": "3.*@dev",
        "phpixie/processors": "3.*@dev",
        "phpixie/http": "3.*@dev",
        "psr/http-message": "1.*@dev",
        "phpixie/http-processors": "3.*@dev"
    },
    "require-dev": {
        "phpixie/test": "3.*@dev"
    },
	"extra": {
		"branch-alias": {
			"dev-master": "3.*-dev"
		}
	}
}
